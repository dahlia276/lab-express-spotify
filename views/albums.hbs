<div class="container">
    <div class="row">
        <div class="col-md-12 albums">
            {{#each albums}}
            <div class="card">
                <img class="card-img-top" src={{images.[0].url}} />
                <div class="card-body">
                    <a href="/tracks/{{id}}"> View tracks </a>
                    <h5 class="card-title"> {{name}}</h5>
                </div>
            </div>
            {{/each }}
        </div>
    </div>
</div>